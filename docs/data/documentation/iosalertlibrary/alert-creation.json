rConfig(","    id: id,","    duration: 3,","    position: .top,","    gestures: [.swipe(direction: [.up], threshold: 20)],","    animationType: .slide,","    animationConfig: AnimationConfig(","        offset: (x: (start: -50, end: 0), y: (start: 0, end: 0)),","        opacity: (start: 0, end: 1),","        scaleEffect: (from: 1, anchor: .center)","    )",")","","\/\/ Create the alert container","let container = BasicContainerView(content: alert, containerConfig: containerConfig)","","\/\/ Display the notification","iosAlertLibrary.showAlert(container: container, useOverlayWindow: false)","","\/\/ Force dismiss the notification","iosAlertLibrary.dismissAlert(id: id)",""],"syntax":"swift","type":"codeListing"}],"kind":"content"}],"identifier":{"url":"doc:\/\/alertslibrary.iOSAlertLibrary\/documentation\/iOSAlertLibrary\/Alert-Creation","interfaceLanguage":"swift"},"kind":"article","references":{"doc://alertslibrary.iOSAlertLibrary/documentation/iOSAlertLibrary":{"type":"topic","abstract":[{"text":"SwiftUI-based notification library that works seamlessly on any screen.","type":"text"}],"url":"\/documentation\/iosalertlibrary","kind":"symbol","identifier":"doc:\/\/alertslibrary.iOSAlertLibrary\/documentation\/iOSAlertLibrary","role":"collection","title":"iOSAlertLibrary"}}}